{
  "name": "esova",
  "main": "source/app.js",
  "version": "0.0.2-alpha",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ],
      "urify/transform"
    ]
  },
  "scripts": {
    "start": "npm run www & npm run watch",
    "bundle": "browserify -t findup-package-json source/index.js | uglifyjs -cm > public/browser/bundle.js",
    "watch": "watchify source/app.js -p [ browserify-hmr -u http://$(my-local-ip):3123 -h 0.0.0.0 ] -p ghostmodeify -t babelify -o public/browser/bundle.js -dv",
    "www": "ecstatic"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "browserify-hmr": "^0.3.1",
    "ecstatic": "^1.3.1",
    "ghostmodeify": "^0.1.1",
    "my-local-ip": "^1.0.0",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.6.1"
  },
  "dependencies": {
    "component-type": "^1.2.0",
    "curlrequest": "^0.5.6",
    "gitter-sidecar": "git+https://github.com/gitterHQ/sidecar.git#e99912bbb8df5e7e829851a2014700a53d4d181f",
    "main-loop": "^3.2.0",
    "ud": "^3.0.0",
    "virtual-dom": "^2.1.1"
  }
}
